{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "rootDir": "./src",
    "sourceMap": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {},
  },
  "exclude": [],
  "include": [
    "src/**/*",
    "src/*",
    "index.d.ts"
  ]
}